<%= render 'layouts/header' %>
<div class='flex items-center p-4 justify-center min-h-screen bg-indigo-900 text-gray-800'>
  <div class='w-full md:w-1/2 lg:w-1/3 xl:w-1/4 bg-white shadow-xl rounded-xl p-6 flex flex-col'>
    <div class='flex items-center justify-between mb-4'>
      <h2 class='text-2xl font-light text-gray-800'>Editar usuario</h2>
      <%= link_to "Regresar", :back, class: 'btn self-end' %>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class='mb-4'>
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
      </div>

      <div class='mb-4'>
        <%= f.label :time_zone, class: 'label' %>
        <%= f.time_zone_select :time_zone, nil, { include_blank: true }, { class: 'input' } %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class='mb-4'>
        <%= f.label :password, class: 'label' %><i class='text-gray-800'>(déjalo en blanco si no desea cambiarla)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: 'input'  %>
        <% if @minimum_password_length %>
          <em class='text-gray-800'><%= @minimum_password_length %> carácteres mínimo</em>
        <% end %>
      </div>

      <div class='mb-4'>
        <%= f.label :password_confirmation, class: 'label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input'  %>
      </div>

      <div class='mb-4'>
        <%= f.label :current_password, class: 'label' %> <i class='text-gray-800'>(necesitamos su contraseña actual para confirmar cambios)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'input' %>
      </div>

      <div class='mb-8'>
        <%= f.label :full_name, class: 'label' %>
        <%= f.text_field :full_name, autofocus: true, autocomplete: "full-name", class: 'input' %>
      </div>

      <div class='mb-8'>
        <%= f.label :phone, class: 'label' %>
        <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: 'input' %>
      </div>

      <div class="mb-4">
        <%= f.submit "Actualizar", class: 'btn btn--primary w-full' %>
      </div>
    <% end %>

  </div>
</div>