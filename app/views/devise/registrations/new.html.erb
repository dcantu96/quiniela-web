<div class='flex items-center px-4 justify-center h-screen bg-indigo-900'>
  <div class='w-full md:w-1/2 lg:w-1/3 xl:w-1/4 bg-white shadow-xl rounded-xl p-6 flex flex-col'>
    <h2 class='text-2xl text-center text-indigo-900 mb-2'>QNFLMTY 2022</h2>
    <%= image_tag 'logo.svg', alt: 'Example Image', class: 'w-32 mx-auto mb-4' %>
    <h2 class='text-md text-indigo-900 mb-2'>Register</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class='mb-4'>
        <%= f.label :full_name, class: 'label' %>
        <%= f.text_field :full_name, placeholder: "Full Name", autofocus: true, autocomplete: 'name', class: 'input', required: true %>
      </div>

      <div class='mb-4'>
        <%= f.label :phone, class: 'label' %>
        <%= f.text_field :phone, placeholder: "Phone", autocomplete: 'name', class: 'input', required: true %>
      </div>

      <div class='mb-4'>
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, placeholder: "Email", autocomplete: 'email', class: 'input', required: true %>
      </div>

      <div class='mb-4'>
        <%= f.label :time_zone, class: 'label' %>
        <%= f.time_zone_select(:time_zone, nil, include_blank: true, class: 'w-full') %>
      </div>

      <div class='mb-4'>
        <%= f.label :password, class: 'label' %>
        <%= f.password_field :password, placeholder: "Password", autocomplete: 'new-password', class: 'input', required: true %>
      </div>

      <div class='mb-4'>
        <%= f.label :password_confirmation, class: 'label' %>
        <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: 'new-password', class: 'input', required: true %>
      </div>

      <div class='actions'>
        <%= f.submit 'Sign up', class: 'btn btn--primary mb-2' %>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>


