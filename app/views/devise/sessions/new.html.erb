<div class='flex items-center px-4 justify-center h-screen bg-indigo-900'>
  <div class='w-full md:w-1/2 lg:w-1/3 xl:w-1/4 bg-white shadow-xl rounded-xl p-6 flex flex-col'>
    <h2 class='text-2xl text-center text-indigo-900 mb-2 text-bold'>QNFLMTY 2024</h2>
    <%= image_tag 'logo.svg', alt: 'Example Image', class: 'w-32 mx-auto mb-4' %>
    <h2 class='text-md text-indigo-900 mb-2 text-left'>Ingresar</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class='mb-4'>
        <%= f.label :email, class: 'label text-left' %>
        <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: 'email', class: 'input', required: true %>
      </div>

      <div class='mb-4'>
        <%= f.label :password, class: 'label text-left' %>
        <%= f.password_field :password, placeholder: "Contraseña", autocomplete: 'current-password', class: 'input', required: true %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class='mb-4 flex justify-start align-middle'>
          <%= f.check_box :remember_me, class: 'mr-2' %>
          <%= f.label :remember_me, class: 'label inline-block mb-0' %>
        </div>
      <% end %>
      

      <div class='actions'>
        <%= f.submit 'Iniciar Sesión', class: 'btn btn--primary mb-2 w-full' %>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>

