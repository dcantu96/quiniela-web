<div class='flex items-center px-4 justify-center h-screen bg-indigo-900'>
  <div class='w-full md:w-1/2 lg:w-1/3 xl:w-1/4 bg-white shadow-xl rounded-xl p-6 flex flex-col'>
    <h2 class='text-2xl text-center text-indigo-900 mb-2'>Bienvenido a la quiniela 2021</h2>
    <%= image_pack_tag 'logo.svg', alt: 'Example Image', class: 'w-32 mx-auto mb-4' %>
    <h2 class='text-md text-indigo-900 mb-2'>Sign In</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class='mb-4'>
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: 'email', class: 'input', required: true %>
      </div>

      <div class='mb-4'>
        <%= f.label :password, class: 'label' %>
        <%= f.password_field :password, placeholder: "ContraseÃ±a", autocomplete: 'current-password', class: 'input', required: true %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class='mb-4'>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      

      <div class='actions'>
        <%= f.submit 'Log in', class: 'btn btn--primary mb-2' %>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>

