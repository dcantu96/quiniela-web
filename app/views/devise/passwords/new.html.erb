<div class='flex items-center px-4 justify-center h-screen bg-indigo-900'>
  <div class='w-full md:w-1/2 lg:w-1/3 xl:w-1/4 bg-white shadow-xl rounded-xl p-6 flex flex-col'>
    <h2 class='text-2xl text-center text-indigo-900 mb-2'>Forgot your password?</h2>
    <%= image_tag 'logo.svg', alt: 'Example Image', class: 'w-32 mx-auto mb-4' %>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class='mb-4'>
        <%= f.label :email, class: 'label text-left' %>
        <%= f.email_field :email, placeholder: "Email", autocomplete: 'email', class: 'input', required: true %>
      </div>

      <div class='actions'>
        <%= f.submit 'Send password reset email', class: 'btn btn--primary mb-2 w-full' %>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>



