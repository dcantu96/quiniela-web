<div class='flex items-center px-4 justify-center h-screen bg-indigo-900'>
  <div class='w-full md:w-1/2 lg:w-1/3 xl:w-1/4 bg-white shadow-xl rounded-xl p-6 flex flex-col'>
    <h2 class='text-2xl text-center text-indigo-900 mb-2'>Change your password</h2>
    <%= image_pack_tag 'logo.svg', alt: 'Example Image', class: 'w-32 mx-auto mb-4' %>
    <h2 class='text-md text-indigo-900 mb-2'>Register</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class='mb-4'>
        <%= f.label :password, "New password", class: 'label' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'input' %>
      </div>

      <div class='mb-4'>
        <%= f.label :password_confirmation, "Confirm new password", class: 'label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
      </div>

      <div class='actions'>
        <%= f.submit 'Change my password', class: 'btn btn--primary mb-2' %>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>



