<%= form_with model: [:admin, @week] do |f| %>
  <% if @week.errors.any? %>
    <div>
      <ul>
        <% @week.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class='mb-4'>
    <%= f.label :number, class: 'label' %>
    <%= f.text_field :number, class: 'input', required: true %>
  </div>
  <div class='mb-4' data-controller='select'> 
    <%= f.label :tournament, class: 'label' %>
    <%= f.collection_select :tournament_id, Sport.all, :id, :name, {}, { class: 'select2' } %>
  </div>
  <%= f.submit class: 'btn btn--primary' %>
<% end %>


