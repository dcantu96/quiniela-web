<div class="rounded-xl p-6 shadow-lg bg-white">
  <div class='flex justify-between items-center mb-4'>
    <div class='mr-4'>
      <p class='text-xs font-light text-gray-500'>
        Week
      </p>
      <h2 class='text-lg mb-4'>
        <%= week.number %>
      </h2>
    </div>
    <div>
      <p class='text-xs font-light text-gray-500'>
        Finished
      </p>
      <h2 class='text-lg mb-4'>
        <%= week.finished %>
      </h2>
    </div>
  </div>
  <div class='flex justify-between'>
    <%= link_to "View", admin_week_path(week), class: 'btn btn--primary' %>
    <%= link_to "New Match", new_admin_week_match_path(week), class: 'btn btn--warning' %>
  </div>
</div>