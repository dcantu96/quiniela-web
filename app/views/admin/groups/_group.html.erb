<div class="rounded-xl shadow-lg bg-white">
  <div class="flex justify-between mb-4 px-6 pt-6">
    <div>
      <div class="text-md text-indigo-900 flex items-center">
        <%= group.name %>
      </div>
      <p class="text-sm text-left text-gray-500">
        <%= group.tournament.name %> - torneo
      </p>
      <p class="text-sm text-left text-gray-500">
        <%= group.tournament.year %> - a√±o
      </p>
    </div>
    <% if group.finished %>
      <div class='text-md text-gray-600'>
        Terminado
      </div>
    <% end %>
    <% if group.private %>
      <div class='text-md text-red-600'>
        Privado
      </div>
    <% end %>
  </div>
  
  <div class='flex justify-around gap-0'>
    <%= link_to members_admin_group_path(group), class: "text-indigo-700 py-2 px-2" do %>
      <span>Tabla</span>
      <i class="fa-solid fa-table ml-2"></i>
    <% end %>
    <%= link_to matches_admin_group_path(group), class: "text-indigo-700 py-2 px-2" do %>
      <span>Juegos</span>
      <i class="fa-solid fa-football-ball ml-2"></i>
    <% end %>
    <% if !group.finished %>
      <%= link_to requests_admin_group_path(group), class: "text-indigo-700 py-2 px-2" do %>
        <span>Solicitudes</span>
        <i class="fa-solid fa-list-check ml-2"></i>
      <% end %>
    <% end %>
  </div>
</div>