<div class='p-6 container mx-auto text-left'>
  <p class='mb-2'>Torneo: <%= @group.tournament.name %></p>
  <p class='mb-2'>AÃ±o: <%= @group.tournament.year %></p>
  <p class='mb-2'>Semana Actual: <%= @current_week ? @current_week.number : 'No hay semanas' %></p>
  <p class='mb-2'>Membresias Activas: <%= @group.memberships.active.length %></p>
  <p class='mb-2'>Solicitudes Pendientes: <%= @group.requests.pending.length %></p>
  <p class='mb-2'>Solicitudes Rechazadas: <%= @group.requests.denied.length %></p>
  <p class='mb-2'>Solicitudes Rechazadas: <%= @group.requests.denied.length %></p>
  
  <p class='mb-2'> Proximo Juego:
    <% if @next_match %>
      <span><%= @next_match.visit_team.short_name %> @ <%= @next_match.home_team.short_name %> <%= @next_match.start_time %></span>
    <% else %>
      <span>No hay juegos</span>
    <% end %>
  </p>

  <% if @group.tournament.weeks.count != 0 %>
    <p>Cantidad de semanas: <%= @group.tournament.weeks.count %></p>
    <%= button_to 'Actualizar Semanas', update_week_matches_admin_tournament_path(@group.tournament), class: 'btn btn--primary mb-4 inline-block' %>
  <% else %>
    <p>No hay semanas. Crear semanas</p>
    <%= button_to 'Crear Semanas', generate_week_matches_admin_tournament_path(@group.tournament), class: 'btn btn--primary mb-4' %>
  <% end %>
</div>