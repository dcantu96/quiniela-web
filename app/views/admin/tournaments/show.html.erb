<div class='p-6 container mx-auto text-left'>
  <div class='mb-4'>
    <div class='flex items-center mb-2'>
      <h1 class='text-xl text-indigo-900 mr-4'><%= @tournament.name %></h1>
      <%= link_to 'Nueva Semana', new_admin_tournament_week_path(@tournament), class: 'btn btn--secondary' %>
    </div>
      <% if @tournament.weeks.count != 0 %>
        <p>Cantidad de semanas: <%= @tournament.weeks.count %></p>
        <%= button_to 'Actualizar Semanas', update_week_matches_admin_tournament_path(@tournament), class: 'btn btn--primary mb-4 inline-block' %>
      <% else %>
        <p>No hay semanas. Crear semanas</p>
        <%= button_to 'Crear Semanas', generate_week_matches_admin_tournament_path(@tournament), class: 'btn btn--primary mb-4' %>
      <% end %>
  </div>
  <div class="flex flex-col">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr class="bg-gray-200">
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Week Number
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Finished
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @weeks.each do |week|  %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-indigo-900">
                      <%= link_to week.number, admin_week_path(week) %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-indigo-900">
                      <%= button_to [:toggle_finished, :admin, week], form: { data: { turbo_confirm: 'This will toggle week finished status. Are you sure?' } }, class: 'btn btn--primary py-1 bg-gray-500' do %>
                        <% if week.finished? %>
                          <span>Yes</span>
                          <i class="fa-solid fa-check ml-1"></i>
                        <% else %>
                          <span>No</span>
                          <i class="fa-solid fa-times ml-1"></i>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex gap-4">
                      <%= button_to 'Update match results', [:update_match_results, :admin, week], form: { data: { turbo_confirm: 'This send a request to fetch match results in ESPN. Are you sure?' } }, class: 'btn btn--primary py-1' %>
                      <%= button_to 'Update/Generate matches', [:update_matches, :admin, week], form: { data: { turbo_confirm: 'This send a request to fetch match schedules in ESPN. Are you sure?' } }, class: 'btn btn--primary py-1' %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>