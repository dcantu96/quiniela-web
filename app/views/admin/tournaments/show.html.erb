<%= render 'show_header' %>

<div class='p-6 container mx-auto'>
  <div class='mb-4'>
    <div class='flex items-center mb-2'>
      <h1 class='text-xl text-indigo-900 mr-4'><%= @tournament.name %></h1>
      <%= link_to 'Nueva Semana', new_admin_tournament_week_path(@tournament), class: 'btn btn--secondary' %>
      <% if @tournament.weeks.present? %>
        <%= button_to 'Actualizar Semanas', generate_week_matches_admin_tournament_path(@tournament), class: 'btn btn--secondary' %>
      <% else %>
        <%= button_to 'Crear Semanas', generate_week_matches_admin_tournament_path(@tournament), class: 'btn btn--secondary' %>
       <% end %>
    </div>
  </div>
  <div class="flex flex-col">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr class="bg-gray-200">
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Week Number
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Finished
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @tournament.weeks.each do |week|  %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-indigo-900">
                      <%= link_to week.number, admin_week_path(week) %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-indigo-900">
                      <%= week.finished ? 'Yes' : 'No' %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex">
                      <%= button_to "Update week", update_matches_admin_tournament_week_path(tournament_id: week.tournament_id, week_id: week.id), class: 'btn btn--primary', data: { confirm: 'This will fetch the winner from espn and will not do anything if no winner is set.', disable_with: 'loading...' } %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>