<div class="rounded-xl p-6 shadow-lg bg-white">
  <div class='flex justify-between items-center mb-4'>
    <div class='mr-4'>
      <p class='text-xs font-light text-gray-500'>
        Tournament
      </p>
      <h2 class='text-lg mb-4'>
        <%= tournament.name %>
      </h2>
    </div>
    <div>
      <p class='text-xs font-light text-gray-500'>
        Sport
      </p>
      <h2 class='text-lg mb-4'>
        <%= tournament.sport.name %>
      </h2>
    </div>
  </div>
  <div class='flex justify-between'>
    <%= link_to "View", admin_tournament_path(tournament), class: 'btn btn--primary' %>
    <%= link_to "Groups", admin_groups_path, class: 'btn btn--secondary' %>
    <%= link_to "Edit", edit_admin_tournament_path(tournament), class: 'btn btn--primary' %>
  </div>
</div>