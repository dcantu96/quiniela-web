<div class='bg-white px-6 pt-3 shadow-sm'>
  <div class='flex flex-wrap justify-start lg:justify-between mb-6'>
    <div class="flex items-center">
      <i class="fas fa-handshake fa-2x p-1 mr-3 fill-current transition-all duration-300 text-indigo-900"></i>
      <%= link_to 'Groups', admin_groups_path, class: 'text-md text-indigo-900 mr-3 underline' %>
      <div class="text-md text-indigo-900 mr-3">&#x2f;</div>
      <h1 class='text-xl text-indigo-900 mr-3'><b><%= @membership.group.name %></b></h1>
    </div>
    <div class="flex items-center">
      <% if @membership.group.tournament.weeks.present? %>
        <%= link_to admin_week_path(@membership.group.tournament.current_week), class: "text-md text-gray-600 flex items-center hover:text-indigo-900 py-3 px-3" do %>
          <i class="fas fa-user mr-2 fill-current"></i>
          <span><%= @membership.group.tournament.current_week.number %></span>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="flex">
    <%= link_to table_admin_membership_path(@membership), class: "text-md text-indigo-900 flex items-center border-b-2 pb-3 px-2 #{current_page?(table_admin_membership_path(@membership)) ? 'border-orange-400' : 'border-transparent hover:border-gray-400'}" do %>
      <i class="fas fa-table mr-3 fill-current"></i>
      <span>Week <%= @membership.group.tournament.current_week.number %> Table</span>
    <% end %>
    <%= link_to picks_admin_membership_path(@membership), class: "text-md text-indigo-900 flex items-center border-b-2 pb-3 px-2 #{current_page?(picks_admin_membership_path(@membership)) ? 'border-orange-400' : 'border-transparent hover:border-gray-400'}" do %>
      <i class="fas fa-money-bill-wave-alt mr-3 fill-current"></i>
      <span>My Picks</span>
    <% end %>
    <%= link_to members_admin_membership_path(@membership), class: "text-md text-indigo-900 flex items-center border-b-2 pb-3 px-2 #{current_page?(members_admin_membership_path(@membership)) ? 'border-orange-400' : 'border-transparent hover:border-gray-400'}" do %>
      <i class="fas fa-users mr-3 fill-current"></i>
      <span>Members List</span>
    <% end %>
    <%= link_to requests_admin_membership_path(@membership), class: "text-md text-indigo-900 flex items-center border-b-2 pb-3 px-2 #{current_page?(requests_admin_membership_path(@membership)) ? 'border-orange-400' : 'border-transparent hover:border-gray-400'}" do %>
      <i class="fas fa-users mr-3 fill-current"></i>
      <span>Requests</span>
    <% end %>
    <%= link_to winners_admin_membership_path(@membership), class: "text-md text-indigo-900 flex items-center border-b-2 pb-3 px-2 #{current_page?(winners_admin_membership_path(@membership)) ? 'border-orange-400' : 'border-transparent hover:border-gray-400'}" do %>
      <i class="fas fa-star mr-3 fill-current"></i>
      <span>Winners</span>
    <% end %>
  </div>
</div>
