<div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 mb-8'>
  <div class="rounded-xl p-6 shadow-lg bg-white border-2 border-indigo-600" id="untie">
    <%= form_with model: [:admin, @untie_pick], local: true do |f| %>
      <%= f.label 'Enter the total points both teams will score in the monday night', class: 'label' %>
      <div class='flex'>
        <%= f.text_field :points, class: 'input w-1/3 mr-3', required: true %>
        <%= f.submit 'Save', class: 'btn btn--primary text-xl' %>
      </div>
    <% end %>
  </div>
</div>