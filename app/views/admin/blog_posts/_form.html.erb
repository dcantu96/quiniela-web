<%= form_with model: [:admin, @blog_post] do |f| %>
  <% if @blog_post.errors.any? %>
    <div>
      <ul>
        <% @blog_post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class='mb-4'>
    <%= f.label :title, class: 'label' %>
    <%= f.text_field :title, class: 'input', required: true %>
  </div>
  <div class='mb-4'>
    <%= f.label :published, class: 'checkbox-toggle mb-4' do %>
      <span class='checkbox-toggle__text'>Publicado</span>
      <%= f.check_box :published, class: 'checkbox-toggle__input' %>
      <div class='checkbox-toggle__fill'></div>
    <% end %>
  </div>
  <div class='mb-4'>
    <%= f.label :content %>
    <%= f.rich_text_area :content, class: 'trix-editor' %>
  </div>
  <%= f.submit class: 'btn btn--primary' %>
<% end %>


