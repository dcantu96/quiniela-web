<%= render 'header' %>
<div class='p-6 container mx-auto'>
  <div class='flex flex-wrap mb-4'>
    <h2 class='text-2xl text-indigo-900 mr-4'>Hello, <%= current_user.full_name %></h2>
    <%= link_to "New Account", new_account_path, class: 'btn btn--primary mr-2' %>
    <%= link_to "New Update", new_admin_update_path, class: 'btn btn--primary' %>
  </div>
  <% if @memberships.present? %>
    <h2 class='text-lg mb-4'>Groups</h2>
    <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 mb-8'>
      <%= render @groups %>
    </div>
  <% end %>
  <% if @requests.present? || @memberships.present? %>
    <% if @memberships.present? %>
      <h2 class='text-lg mb-4'>Memberships</h2>
      <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 mb-8'>
        <%= render @memberships %>
      </div>
    <% end %>
    <% if @requests.present? %>
      <h2 class='text-lg mb-4'>Requests</h2>
      <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 mb-8'>
        <%= render @requests %>
      </div>
    <% end %>
  <% else %>
    <div class='grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3 mb-4'>
      <div class="rounded-xl p-6 shadow-lg bg-white">
        <h2 class='text-lg mb-4'>
          You have no accounts. Please create one.
        </h2>
      </div>
    </div>
  <% end %>
</div>
