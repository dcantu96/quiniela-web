<div class='container mx-auto overflow-x-auto' data-controller='searchable'>
  <div class='hidden md:flex flex-col pb-2 px-4'>
    <h3 class="text-sm uppercase text-gray-600 pb-2">User Time Zone <b><%= current_user.time_zone %></b><span class='ml-2 font-bold underline'><%= link_to 'Edit', edit_user_registration_path %></span></h3>
    <h4 class="text-sm uppercase text-gray-600"><%= Time.current.in_time_zone(current_user.time_zone).to_formatted_s(:long) %></h4>
  </div>
  <div class='relative w-full md:w-1/3 px-4 pb-4' data-controller='search' data-search-url="autocomplete">
    <input type="text" class='input' placeholder="Search usernames" data-action="keyup->search#search">
    <div class='absolute z-70 mt-1 mr-4 bg-white w-full overflow-hidden rounded-lg shadow-lg' data-target='search.results'>
    </div>
  </div>
  <div class='overflow-hidden'>
    <div class='overflow-scroll h-screen w-full'>
      <table>
        <thead>
          <tr>
            <th class="sticky z-40 left-0 top-0 p-3 font-bold text-sm uppercase bg-gray-300 text-gray-700 table-cell">Username</th>
            <% @matches.each do |match| %>
              <th class="sticky z-30 top-0 p-3 font-bold text-sm uppercase text-gray-600 table-cell bg-gray-200">
                <div class="w-24">
                  <% if match.untie %>
                    <span class="bg-black mt-1 px-2 py-1 text-xs text-white uppercase block">MNF</span>
                  <% end %>
                  <%= match.visit_team.short_name %> @ <%= match.home_team.short_name %>
                </div>
              </th>
            <% end %>
          </tr>
          <tr>
            <th class="p-3 sticky left-0 font-bold text-sm uppercase bg-gray-300 text-gray-700 table-cell">Show Time</th>
            <% @matches.each do |match| %>
              <th class="p-3 font-bold text-sm uppercase text-gray-600 bg-gray-200 table-cell">
                <span class="bg-blue-200 mt-1 px-2 py-1 text-xs uppercase block"><%= match.start_time.in_time_zone(current_user.time_zone).strftime("%a %H:%M")%></span>
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <%= render 'members' %>
        </tbody>
      </table>
    </div>
  </div>
</div>
