<div class="<%= 'hidden' if @filters_empty %>" data-toggle-target="content">
  <div class="flex flex-wrap" data-controller="filters">
    <div class='mr-3' data-controller='select'>
      <div class="label">Week</div>
      <div class='relative'>
        <%= select_tag :week_id,
          options_from_collection_for_select(
            @weeks, 'id', 'number', params[:week_id]
          ),
          include_blank: "Current",
          class: "select",
          data: { action: "filters#filter", target: "filters.filter" } %>
      </div>
    </div>
  </div>
</div>