<div class='p-6 container mx-auto'>
  <div class='flex flex-wrap mb-4'>
    <h2 class='text-xl text-indigo-900 mr-4'>Hola, <b><%= current_user.full_name %></b></h2>
  </div>

  <h2 class='text-lg mb-4 text-left'>Mis cuentas</h2>
  <div class="lg:shadow lg:overflow-hidden lg:border-b lg:border-gray-200 sm:rounded-lg mb-4">
    <div class="lg:table w-full rounded min-w-full divide-y divide-gray-200">
      <div class="hidden lg:table-header-group bg-gray-200 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
        <div class="lg:table-cell px-6 py-3">Usuario</div>
        <div class="lg:table-cell px-6 py-3 lg:w-48">Grupo</div>
        <div class="lg:table-cell px-6 py-3 lg:w-48">Semana</div>
        <div class="lg:table-cell px-6 py-3">Puntos</div>
        <div class="lg:table-cell px-6 py-3">Posición</div>
        <div class="lg:table-cell px-6 py-3">Acciones</div>
      </div>
      <div class="grid grid-cols-1 gap-8 lg:table-row-group lg:bg-white divide-y divide-gray-200">
        <% @active_memberships.each do |member| %>
          <div class="bg-white rounded-xl lg:rounded-none lg:table-row shadow-lg grid grid-cols-2 text-left">
            <div class="lg:table-cell px-6 py-6 pb-2 lg:py-3 lg:px-6 whitespace-nowrap">
              <div class="lg:hidden text-sm text-gray-500 text-left">Username</div>
              <div class="flex items-center">
                <div>
                  <div class="text-sm font-medium text-gray-900 text-left">
                    <%= link_to member.account.username, picks_membership_path(member), class: "text-md text-indigo-900 flex items-center" %>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= member.account.user.email %>
                  </div>
                </div>
              </div>
            </div>
            <div class="lg:table-cell px-6 py-6 pb-2 lg:py-3 lg:px-6 text-left">
              <div class="lg:hidden text-sm text-gray-500 text-left">Group</div>
              <div class="text-sm font-medium text-gray-900 text-left">
                <%= link_to member.group.name, table_membership_path(member), class: "text-md text-indigo-900 flex items-center" %>
              </div>
              <div class="text-sm text-gray-500"><%= member.group.tournament.name %> - <%= member.group.tournament.year %></div>
            </div>
            <div class="lg:table-cell px-6 py-6 pb-2 lg:py-3 lg:px-6 whitespace-nowrap">
              <div class="lg:hidden text-sm text-gray-500 text-left">Week Number</div>
              <div class="text-sm text-gray-900 text-left"><%= member.group.tournament.current_week.number %></div>
            </div>
            <div class="lg:table-cell px-6 py-6 pb-2 lg:py-3 lg:px-6 whitespace-nowrap">
              <div class="lg:hidden text-sm text-gray-500 text-left">Points</div>
              <div class="text-sm text-gray-900 text-left"><%= member.current_membership_week.points %></div>
            </div>
            <div class="lg:table-cell px-6 py-6 pb-2 lg:py-3 lg:px-6 whitespace-nowrap">
              <div class="lg:hidden text-sm text-gray-500 text-left">Position</div>
              <div class="text-sm text-gray-900 text-left"><%= member.position %></div>
            </div>
            <div class="lg:table-cell px-6 py-6 pb-4 lg:py-3 lg:px-6 whitespace-nowrap col-span-2">
              <div class='flex flex-wrap gap-x-3 gap-y-2'>
                <%= link_to table_membership_path(member), class: "btn btn--primary" do %>
                  <i class="fa-solid fa-table mr-3 fill-current"></i>
                  <span>Conso</span>
                <% end %>
                <%= link_to picks_membership_path(member), class: "btn btn--primary" do %>
                  <i class="fa-solid fa-money-bill-wave-alt mr-3 fill-current"></i>
                  <span>Picks</span>
                <% end %>
                <%= link_to members_membership_path(member), class: "btn btn--primary" do %>
                  <i class="fa-solid fa-users mr-3 fill-current"></i>
                  <span>Tabla</span>
                <% end %>
                <%= link_to winners_membership_path(member), class: "btn btn--primary" do %>
                  <i class="fa-solid fa-star mr-3 fill-current"></i>
                  <span>Wins</span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
        <% @requests.pending.each do |request| %>
          <div class="bg-white rounded-xl lg:rounded-none lg:table-row shadow-lg grid grid-cols-2">
            <div class="lg:table-cell px-6 py-6 lg:py-3 lg:px-6 whitespace-nowrap">
              <div class="lg:hidden text-sm text-gray-500 text-left">Usuario</div>
              <div class="text-sm text-gray-800 whitespace-nowrap text-left">
                <%= request.account.username %>
              </div>
            </div>
            <div class="lg:table-cell px-6 py-6 pb-2 lg:py-3 lg:px-6 text-left">
              <div class="lg:hidden text-sm text-gray-500 text-left">Group</div>
              <div class="text-sm font-medium text-gray-900 text-left">
                <%= request.group.name %>
              </div>
              <div class="text-sm text-gray-500"><%= request.group.tournament.name %> - <%= request.group.tournament.year %></div>
            </div>
            <div class="lg:table-cell px-6 py-6 lg:py-3 lg:px-6 text-left">
              <div class="lg:hidden text-sm text-gray-500 text-left">Status</div>
              <span class="px-2 mb-1 whitespace-no-wrap inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-200 text-blue-800">
                Solicitud pendiente
              </span>
              <div class="text-sm text-gray-500 lg:mb-0 text-left">Fecha de Solicitud: <%= request.created_at.in_time_zone(current_user.time_zone).to_formatted_s(:short) %></div>
            </div>
            <div class="lg:table-cell">
            </div>
            <div class="lg:table-cell">
            </div>
            <div class="lg:table-cell">
            </div>
            <div class="lg:table-cell">
            </div>
          </div>
        <% end %>
        <% if @can_join_more_groups %>
          <div class="bg-white rounded-xl lg:rounded-none lg:table-row shadow-lg grid grid-cols-1">
            <div class="lg:table-cell px-6 py-6 lg:py-3 lg:px-6 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-500 text-left">
                <%= link_to 'Únete a la quiniela', dashboard_join_groups_path, class: "underline text-indigo-900" %>
              </div>
            </div>
            <div class="lg:table-cell">
            </div>
            <div class="lg:table-cell">
            </div>
            <div class="lg:table-cell">
            </div>
            <div class="lg:table-cell">
            </div>
            <div class="lg:table-cell">
            </div>
          </div>
        <% end %>
        <% if @accounts.length > 0 %>
          <div class="bg-white rounded-xl lg:rounded-none lg:table-row shadow-lg grid grid-cols-1">
            <div class="lg:table-cell px-6 py-6 lg:py-3 lg:px-6 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-500 text-left">
                Crear otro "username", &nbsp;<%= link_to 'aquí', new_account_path, class: "underline text-indigo-900" %>
              </div>
            </div>
            <div class="lg:table-cell">
            </div>
            <div class="lg:table-cell">
            </div>
            <div class="lg:table-cell">
            </div>
            <div class="lg:table-cell">
            </div>
            <div class="lg:table-cell">
            </div>
          </div>
        <% else %>
          <div class="bg-white rounded-xl lg:rounded-none lg:table-row shadow-lg grid grid-cols-1">
            <div class="lg:table-cell px-6 py-6 lg:py-3 lg:px-6 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-500 text-left">
                <%= link_to 'Crear username', new_account_path, class: "underline text-indigo-900" %>
              </div>
            </div>
            <div class="lg:table-cell">
            </div>
            <div class="lg:table-cell">
            </div>
            <div class="lg:table-cell">
            </div>
            <div class="lg:table-cell">
            </div>
            <div class="lg:table-cell">
            </div>
          </div>
        <% end %>
        
      </div>
    </div>
  </div>

  <% if @finished_memberships.present? %>
    <h2 class='text-lg mb-4 mt-4 text-left'>Grupos previos</h2>

    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr class="bg-gray-200">
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Username
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Group
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @finished_memberships.each do |membership| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-left">
                    <div class="flex items-center">
                      <div>
                        <div class="text-sm font-medium text-gray-900">
                          <%= link_to membership.account.username, picks_membership_path(membership), class: "text-md text-indigo-900 flex items-center" %>
                        </div>
                        <div class="text-sm text-gray-500">
                          <%= membership.account.user.email %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-left">
                    <div class="text-sm text-gray-900"><%= membership.group.name %></div>
                    <div class="text-sm text-gray-500"><%= membership.group.tournament.name %> - <%= membership.group.tournament.year %></div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>