<div class="rounded-xl p-6 shadow-lg bg-white <%= 'border-2 border-indigo-600' if pick.match.untie %>">
  <div class='grid grid-cols-2 gap-6 mb-2'>
    <% if pick.correct %>
      <span class='text-md font-extrabold mb-2'>WIN</span>
    <% else %>
      <p class='text-xs text-gray-500 mb-2'>
        Updated at <b><%= time_ago_in_words pick.updated_at %></b>
      </p>
    <% end %>
    <% if pick.match.untie %>
      <p class='text-xs font-bold text-gray-700 mb-2 text-right'>
        Monday Night
      </p>
    <% end %>
  </div>
  <div class='grid grid-cols-2 gap-6 mb-4'>
    <div class='flex flex-col'>
      <p class='text-xs font-light text-gray-500'>
        Visit Team
      </p>
      <h2 class='text-md md:text-lg'>
        <%= pick.match.visit_team.name %>
      </h2>
    </div>
    <div class='flex flex-col items-end text-right'>
      <p class='text-xs font-light text-gray-500'>
        Home Team
      </p>
      <h2 class='text-md md:text-lg'>
        <%= pick.match.home_team.name %>
      </h2>
    </div>
  </div>
  <div class='flex justify-between text-center mb-4 items-center'>
    <%= image_pack_tag "#{pick.match.visit_team.short_name}.svg", class: 'w-20' %>
    <div>
      <p class='text-xs font-light text-gray-500'>
        Start Time
      </p>
      <h2 class='text-sm md:text-md mb-4'>
        <%= pick.match.start_time.in_time_zone(current_user.time_zone).to_formatted_s(:short)  %>
      </h2>
      <p class='text-xs font-light text-gray-500'>
        Lock Time
      </p>
      <h2 class='text-sm md:text-md'>
        <%= (pick.match.start_time - 1.minute).in_time_zone(current_user.time_zone).to_formatted_s(:short)  %>
      </h2>
    </div>
    <%= image_pack_tag "#{pick.match.home_team.short_name}.svg", class: 'w-20 flip' %>
  </div>
  <%= render 'picks/pick_buttons', pick: pick %>
</div>